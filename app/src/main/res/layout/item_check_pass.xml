<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        xmlns:cv="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/cardview_margin"
        android:layout_marginRight="@dimen/cardview_margin"
        android:layout_marginTop="@dimen/cardview_margin_vert"
        android:layout_marginBottom="@dimen/cardview_margin_vert"
        android:id="@+id/cv"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="false"
        app:cardElevation="@dimen/cardview_elevation"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        cv:cardCornerRadius="@dimen/cardview_corner_radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/cardview_ll_padding_2"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tariff_text"
                    android:text="Тариф: "
                    android:layout_centerVertical="true"
                    android:maxLines="1"
                    android:textSize="@dimen/text_size"
                    android:textStyle="normal"
                    android:textColor="@color/colorGrey"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tariff"
                    android:text="Полный"
                    android:layout_toRightOf="@+id/tariff_text"
                    android:layout_centerVertical="true"
                    android:maxLines="1"
                    android:textSize="@dimen/text_size"
                    android:textStyle="normal"
                    android:textColor="@color/colorBlack"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/seats_text"
                    android:text="Мест: "
                    android:textSize="@dimen/text_size"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/seats"
                    android:textStyle="normal"
                    android:textColor="@color/colorGrey"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/seats"
                    android:text="2"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:visibility="visible"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/fio"
                    android:text="ТУРОВЕЦ НИКИТА НИКОЛАЕВИЧ"
                    android:textSize="@dimen/text_size"
                    android:textStyle="normal"
                    android:textColor="@color/colorBlack"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/doc"
                    android:text="Паспорт Республики Беларусь НВ2371075"
                    android:textSize="@dimen/text_size"
                    android:textStyle="normal"
                    android:textColor="@color/colorBlack"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>